<div class="container">
    <h1>{{title}}</h1>

    <ul class="nav nav-tabs">
        <li class="active"><a href="/">Add Course</a></li>
        <li><a href="/courses">Courses</a></li>
    </ul>

    <br />
    <div class="row">
        <div class="col-md-6">
            <form method="post" id="submitForm">
                <div class="form-group">
                    <label for="courseNo">Course Number</label>
                    <input type="text" required class="form-control" name="courseNo" id="courseNo"
                        placeholder="Enter course number">
                </div>
                <div class="form-group">
                    <label for="title">Title</label>
                    <input class="form-control" required id="title" name="title" placeholder="Title">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>

                    <textarea class="form-control" rows="3" id="description" name="description" required></textarea>
                </div>
                <button type="submit" class="btn btn-success">Submit</button>
                <div class="form-group margin-bottom-10">
                </div>
                <div id="statusMsg">
                </div>
            </form>
        </div>
    </div>
</div>
<script src="javascripts/index.js"></script>